# Django Settings
SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=False
ALLOWED_HOSTS=*

# Database Configuration (PostgreSQL on AWS RDS)
DB_ENGINE=django.db.backends.postgresql
DB_NAME=rafter_production
DB_USER=rafter_admin
DB_PASSWORD=your-rds-password-here
DB_HOST=your-rds-endpoint.region.rds.amazonaws.com
DB_PORT=5432

# AWS S3 Settings (for media/static files) - NEVER COMMIT REAL CREDENTIALS
AWS_ACCESS_KEY_ID=your-aws-access-key-here
AWS_SECRET_ACCESS_KEY=your-aws-secret-key-here
AWS_STORAGE_BUCKET_NAME=rafter-backend-media
AWS_S3_REGION_NAME=us-east-1
AWS_S3_CUSTOM_DOMAIN=${AWS_STORAGE_BUCKET_NAME}.s3.amazonaws.com

# Email Configuration
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.privateemail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=support@raftersfoodservices.ie
EMAIL_HOST_PASSWORD=your-email-password-here
DEFAULT_FROM_EMAIL=support@raftersfoodservices.ie
MAIL_DEFAULT_SENDER=support@raftersfoodservices.ie
FRONTEND_URL=https://www.raftersfoodservices.ie

# Stripe Configuration
STRIPE_PUBLIC_KEY=your-stripe-public-key-here
STRIPE_SECRET_KEY=your-stripe-secret-key-here

# CORS Settings
CORS_ALLOWED_ORIGINS=*

# Security Settings (Set to True in production with HTTPS)
SECURE_SSL_REDIRECT=False
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False
SECURE_HSTS_SECONDS=0
SECURE_HSTS_INCLUDE_SUBDOMAINS=False
SECURE_HSTS_PRELOAD=False
